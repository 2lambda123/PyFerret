* equivalences to assist with passing subscripts
	INTEGER
     .		lo_ss( max_mem_args, 4 ),
     .		hi_ss( max_mem_args, 4 )

	EQUIVALENCE
     .		(lo_ss(1,1), m1lox), (hi_ss(1,1), m1hix)
