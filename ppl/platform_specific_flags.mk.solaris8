#CDFLIB          = /opt/local/netcdf-2.4.2/lib/libnetcdf.a
#CDFLIB          = /opt/local/netcdf-3.4/lib/libnetcdf.a
CDFLIB          = /home/ja4/kobrien/src/solaris/netcdf-3.5.0/lib/libnetcdf.a

