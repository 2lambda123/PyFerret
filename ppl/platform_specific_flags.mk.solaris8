DODS_LIBS       = -L/home/ja4/kobrien/solaris8/FERRET/DODS  -lnc-dods -ldap++ -lnc-dods -ldap++ -lxml2  -lcurl /usr/lib/libcrypt.a -lpthread /usr/lib/libcrypt.a -lrx -lz

TERMCAPLIB      =-ltermcap


