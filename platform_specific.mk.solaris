DODS_LIBS	= -L/home/stout/kobrien/DODS-release-3.4.5/solaris/DODS/lib/ -lnc-dods -ldap++ -lnc-dods -ldap++ -lxml2  -lcurl /usr/lib/libcrypt.a -lpthread /usr/lib/libcrypt.a -lrx -lz 

